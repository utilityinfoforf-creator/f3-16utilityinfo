  font-weight: 600;
}

.info-card .value {
  font-size: 24px;
  font-weight: 700;
  color: #333;
}

.info-card.negative {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff5252 100%);
  border: 3px solid #dc3545 !important;
}

.info-card.negative h3 {
  color: #fff;
}

.info-card.negative .value {
  color: #fff;
  font-weight: 900;
}

/* Warnings */
.warning-box {
  background: #fff3cd;
  border-left: 4px solid #ffc107;
  padding: 15px;
  border-radius: 8px;
  margin-bottom: 30px;
  color: #856404;
}

.warning-box i {
  margin-right: 10px;
}

/* Email Section */
.email-section {
  background: #fff;
  padding: 20px;
  border-radius: 12px;
  margin-bottom: 30px;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  border: 2px solid #000;
}

.email-section h3 {
  margin-bottom: 15px;
  color: #333;
