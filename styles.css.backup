}

/* Info Cards (Dashboard) */
.dashboard-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
  margin-bottom: 30px;
}

.info-card {
  background: #fff;
  padding: 20px;
  border-radius: 12px;
